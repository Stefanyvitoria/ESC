    function void run(String word) {
        var char letra, key;
        var int x, y, erro, count, tmp, tmp1;
        
        let x = 11;
        let y = 5;
        let count = 0;
        let erro = 0;
        let key =  Keyboard.readChar();
        while (~(key = 135)) {          //loop geral do jogo
                    
            while (~(key = 128)) {      // Capita a letra
                let letra = key;
                do Output.moveCursor(15,8);
                let key =  Keyboard.readChar();
            }

            let tmp = count + 1;
            let count = tmp;
           
            do ForcaLogic.drawLetra(letra, x,y);
            //do ForcaLogic.verificaletra(letra, word);
            let tmp1 = ForcaLogic.verificaletra(letra, word, erro);
            let tmp = erro + tmp1;
            let erro = tmp; 
           
            let tmp = y + 2;
            let y = tmp;

            if (count = 10) {
                let count = 0;

                let tmp = x+2;
                let x = tmp;
                let y = 5;

            }
            do Output.moveCursor(15,8);
            let key =  Keyboard.readChar();
        }
        return;
    }

    function int verificaletra(int letra, String palavra, int erro) {
        var int lenPalavra, count, tmp;
        var boolean ntem;

        //do Output.printString(palavra);
        //do Output.println();
        let lenPalavra = palavra.length();
        let ntem = true;
        let count = 0;
        //do Output.printInt(lenPalavra);
        while (count < (lenPalavra+2)) {

            if (letra = palavra[count]) {
                let ntem = false;
            }
            let tmp = count + 1;
            let count = tmp;
        }
        if (ntem) {
            let tmp = erro + 1;
            let erro = tmp;
            do Forca.drawForca(270,erro);
            return 1;
        }
        return 0;
    }


    function void drawLetra(int letra, int x, int y) {
        do Output.moveCursor(x,y);
        do Output.printChar(letra);
        return;
    }


    function void drawTracos(int lenword, int x1, int x2) {
        var int count, tmp, x1, x2;

        let count = 0;
        while (count < lenword) {
            do Screen.drawLine(x1,80,x2,80);
            let tmp = x1+10;
            let x1 = tmp;
            let tmp = x2+10;
            let x2 = tmp;
            let tmp = count + 1 ;
            let count = tmp;
        }
        return;
    }


